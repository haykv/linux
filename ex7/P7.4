#!/bin/bash
dflag=0
strings=""
dirs=""
for w in $@; do
    if [ "$w" == "dirs" ]; then
        dflag=1
        continue
    fi
    if [ $dflag -eq 0 ]; then
#        if [ "$strings" == "" ]; then
#            strings=$w
#        else
            strings="$strings $w"
#        fi
    else
        dirs="$dirs $w"
    fi
done
files=$(find $dirs -type f)
results=""
for f in $files; do
    flag=$(echo $strings|wc -w)
    for w in $strings; do
        if [ "$(egrep $w $f)" != "" ]; then
            ((flag--))
        fi
    done
    if [ $flag -eq 0 ]; then
        results="$results $f"
    fi
done 
dirscnt=$(echo $dirs | wc -w)
>|temp4
for f in $results; do
    dir=$(echo $f | cut -f1 -d"/")
    file=$(echo $f | tr "/" "\n" | tail -1)
    echo "$file $dir" >> temp4
done
results=$(cat temp4 | sort -u | cut -f1 -d" " | uniq -c | grep $dirscnt)
for i in $(seq 2 2 $(echo $results | wc -w)); do
    echo $results | cut -f$i -d" "
done
